{

    "manifest_version": 2,
    "name": "TrueFullscreenVideo",
    "version": "1.0",

    "description": "True fullscreen video control on double click. Also adjust volume using mousewheel",

    "content_scripts": [{
        "matches": ["*://*.primevideo.com/*", "*://*.hotstar.com/*", "*://*.zee5.com/*", "*://*.voot.com/*"],
        "js": ["jquery-3.3.1.js", "jquery.mousewheel.js", "truefullscreenvideo.js"]
    }]

}
